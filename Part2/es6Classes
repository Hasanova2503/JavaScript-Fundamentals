// es6 classes -> syntactical sugar i.e convenient syntax

class Person {

constructor(firstName,lastName,dob){

  this.firstName = firstName;
  this.lastName = lastName;
  this.birthday =  new Date(dob);

}

greeting(){    // methods will be in prototype

  return `Hello there ${this.firstName}  ${this.lastName}`;
}
  
  calculateAge(){

     const diff = Date.now()-this.birthday.getTime ();
    const ageDate = new Date(diff);
    return Maths.abs(ageDate.getUTCFullYear() - 1970); 
  }

  getsMarried(newLastName)
  {

  this.lastName =  newLastName;  

}

static addNumbers(x,y){   // stand alone methods, don't require object to call them

  return x+y;
}
}


const mary = new Person('Mary','Williams','11-13-1980');

console.log(mary.greeting());// Hello there Mary Williams  
console.log(mary.calculateAge());// gives the age
mary.getsMarried('agg'); // lastName becomes agg
console.log(Person.addNumbers(1,2));//3








